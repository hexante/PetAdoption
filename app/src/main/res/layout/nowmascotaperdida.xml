<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:card_view="http://schemas.android.com/tools"
    android:id="@+id/CardMascotaPedida"
    android:layout_width="match_parent"
    android:layout_height="220dp"
    android:layout_margin="5dp"
    android:clickable="true"
    android:orientation="vertical"
    app:cardBackgroundColor="#8FBD43"
    app:cardCornerRadius="4dp"
    app:cardElevation="4dp"
    app:cardUseCompatPadding="true"
    app:contentPadding="5dp"
    card_view:cardCornerRadius="10dp"
    card_view:cardElevation="4dp"
    >

    <android.support.v7.widget.LinearLayoutCompat
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/FotoPerdida"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="4"
            android:background="@drawable/ic_launcher_foreground"
            android:scaleType="centerCrop" />

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <android.support.v7.widget.LinearLayoutCompat
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:orientation="vertical">


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical" />


                <TextView
                    android:id="@+id/NombrePerdida"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="NombrePerdida"
                    android:textColor="#000"
                    android:textSize="22sp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/TelefonoContacto"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="TelefonoContacto"
                    android:textColor="#000"
                    android:textSize="20sp" />

                <TextView
                    android:id="@+id/DescripcionPerdida"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="DescripcionPerdida"
                    android:ems="10"
                    android:gravity="start|top"
                    android:inputType="textMultiLine" />


            </android.support.v7.widget.LinearLayoutCompat>
        </ScrollView>

    </android.support.v7.widget.LinearLayoutCompat>

</android.support.v7.widget.CardView>